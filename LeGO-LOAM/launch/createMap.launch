<launch>

    <!--- Sim Time -->
    <param name="/use_sim_time" value="true" />

    <!--- Run Rviz-->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find lego_loam_bor)/launch/test.rviz" />

    <!--- TF -->
    <!-- <node pkg="tf" type="static_transform_publisher" name="odom_to_map"  args="0 0 0 0 0 0 1 map odom 100"  />
    <node pkg="tf" type="static_transform_publisher" name="camera_init_to_odom"  args="0 0 0.3 0.5 0.5 0.5 0.5 odom camera_init 100" />
    <node pkg="tf" type="static_transform_publisher" name="base_link_to_aft_mapped"  args="0 0 0 -0.5 -0.5 -0.5 0.5 aft_mapped base_link 100" />
    <node pkg="tf" type="static_transform_publisher" name="chassis_link_to_base_link"  args="0 0 0 0 0 0 1 base_link chassis_link 50"  />
    <node pkg="tf" type="static_transform_publisher" name="mid_mount_to_chassis_link"  args="0 0 0.184 0 0 0 1 chassis_link mid_mount 50"  />
    <node pkg="tf" type="static_transform_publisher" name="velodyne_to_mid_mount"  args="0.07 0.03 0.18 0 0 0 1 mid_mount velodyne 100"  /> -->
    
    <!-- http://wiki.ros.org/tf#static_transform_publisher -->
    
    <!-- <node pkg="tf" type="static_transform_publisher" name="camera_init_to_map"  args="0 0 0 0 0 0 1 map   camera_init 10" />
    <node pkg="tf" type="static_transform_publisher" name="base_link_to_camera" args="0 0 0 0 0 0 1 camera base_link   10" />
    <node pkg="tf" type="static_transform_publisher" name="velodyne_to_base_link"  args="0 0 0 0 0 0 1 base_link velodyne 10"/> -->

    <!--- TF -->
    <node pkg="tf" type="static_transform_publisher" name="velodyne_base_link" args="0 0 0 0 0 0 /base_link /velodyne 10" />
    <node pkg="tf" type="static_transform_publisher" name="camera_init_to_map"  args="0 0 0 1.570795   0 1.570795 /map /camera_init 10" />
    <node pkg="tf" type="static_transform_publisher" name="base_link_to_camera" args="0 0 0 -1.570795 -1.570795 0 /camera /base_link   10" />


    <!--- LeGO-LOAM -->
    <arg name="rosbag"  default=""/>
    <arg name="imu_topic" default="/imu/data"/>
    <arg name="lidar_topic" default="/velodyne_points"/>
    <!-- <arg name="lidar_topic" default="/points_raw"/>  -->

    <rosparam file="$(find lego_loam_bor)/config/loam_config.yaml" command="load"/>

    <node pkg="lego_loam_bor" type="lego_loam_bor_create_map"    name="lego_loam_bor_create_map"    output="screen" >
       <remap from="/lidar_points" to="$(arg lidar_topic)"/>
       <remap from="/imu/data" to="$(arg imu_topic)"/>
       <param name="rosbag"      value="$(arg rosbag)" type="string" />
       <param name="imu_topic"   value="$(arg imu_topic)" type="string" />
       <param name="lidar_topic" value="$(arg lidar_topic)" type="string" />
    </node>

</launch>
